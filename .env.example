# GitHub Personal Access Token for git operations (PRs, clones, etc)
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Tailscale auth key (optional - can do interactive auth instead)
# Get from: https://login.tailscale.com/admin/settings/keys
TAILSCALE_AUTHKEY=tskey-auth-xxxxxxxxxxxx

# Git identity (use your GitHub email for Vercel deploys to work)
GIT_EMAIL=your-email@example.com
GIT_NAME=Your Name

# Proxy & Network Settings (if needed)
HTTP_PROXY=http://your-proxy-url:8080
HTTPS_PROXY=http://your-proxy-url:8080
NO_PROXY=localhost,127.0.0.1
# IP or hostname of a Tailscale node to use as a gateway (bypass firewalls)
TAILSCALE_EXIT_NODE=

# Agent Resource Configuration
# AGENT_CPUS=4.0
# AGENT_MEMORY=8G
# AGENT_RESERVATION_CPUS=0.5
# AGENT_RESERVATION_MEMORY=512M
# AGENT_NODE_MEMORY=6144

# Claude Code Configuration
# Max output tokens (default: 16000, max: 128000)
CLAUDE_CODE_MAX_OUTPUT_TOKENS=128000

# Push Notifications (ntfy.sh)
# Get notified when Claude needs your input
# 1. Install ntfy app on phone (Android/iOS)
# 2. Subscribe to a unique topic name
# 3. Set NTFY_ENABLED=true and NTFY_TOPIC below
NTFY_ENABLED=false
NTFY_TOPIC=my-claude-agent-abc123
NTFY_SERVER=https://ntfy.sh
NTFY_RATE_LIMIT=15